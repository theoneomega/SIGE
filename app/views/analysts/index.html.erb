<%content_for :breadcrumb do%>
    <ul class="breadcrumb">
      <li><%=link_to t(:home), root_path %><span class="divider">/</span> </li>
      <li><%=link_to "Analistas", analysts_path%><span class="divider">/</span></li>
      <li class="active"><%=t(:index)%></li>
    </ul>
<%end%>
<div class="well">
  <table class="table table-condensed " id="tabla">
    <thead>
    <tr>
      <th>Analista</th>
      <th>Nombre</th>
      <th>Zona</th>
      <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @analysts.each do |analyst| %>

        <tr>
          <td><%= analyst.analyst %></td>
          <td><%= analyst.fullname %></td>
          <td><%= analyst.area.description if analyst.area%></td>
          <td>
            <ul class="nav nav-pills">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Mostrar', analyst %></li>
                  <li><%= link_to 'Editar', edit_analyst_path(analyst) %></li>
                  <li><%= link_to 'Eliminar', analyst, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </li>
            </ul>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br />

<%= link_to 'Nuevo analista', new_analyst_path, :class => "btn btn-primary" %>

<script>
    $('#tabla').DataTable({
//        "scrollY": "500px",
//        "scrollX": true,
        "language": {
            "sUrl": "/assets/spanish.json"
        },
        "columnDefs": [
            {
                "targets": [ 2 ],
                "visible": true,
                "searchable": true
            }]

    });

</script>