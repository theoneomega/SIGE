<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label t(:email) %><br />
    <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label t(:username) %><br />
    <%= f.text_field :username %></div>

  <div class="field">
    <%= f.label t(:analyst) %><br />
    <%= f.collection_select(:analyst_id, Analyst.all, :id, :analyst, {:prompt => "seleccione analista"}) %>
  </div>
  <%#if signed_in?%>
    <%#@roles = current_user.role.super_admin == true %>
  <div class="control-group">
    <%= f.label :role_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:role_id, Role.all, :id, :role, :prompt => true)%>
    </div>
  </div>
<%#end%>


<div><%= f.label t(:password) %><br />
  <%= f.password_field :password %></div>

<div><%= f.label t(:password_confirmation) %><br />
  <%= f.password_field :password_confirmation %></div>

<div><%= f.submit "Registrar" %></div>
<% end %>

<%= render "devise/shared/links" %>
