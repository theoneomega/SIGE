
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row-fluid">
    <div class="dialog">
      <div class="block">
        <p class="block-heading"><%=t(:signin)%></p>
        <div class="block-body">
          <form>
            <%= f.label t(:username) %>
            <%= f.text_field :login, :autofocus => true, :class =>'span12' %>
            <%= f.label "ContraseÃ±a" %>
            <%= f.password_field :password ,:class=>"span12" %>
            <%= f.submit t(:signin), :class => 'btn btn-success' %>
            <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> <%= f.label t(:remember_me) %></div>
            <% end -%>
            <div class="clearfix"></div>
          </form>
          <%#= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
<% end %>