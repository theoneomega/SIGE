<%= form_for(@error_report) do |f| %>
  <div class="row-fluid">
    <div class="block span6">
      <a href="#general-info" class="block-heading" data-toggle="collapse"><%=t(:general_info)%></a>
      <div id="general-info" class="block-body collapse in">
        <% if @error_report.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@error_report.errors.count, "error") %> prohibited this error_report from being saved:</h2>

            <ul>
              <% @error_report.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <br />
        <div class="field">
          <%= f.label :user %><br />
          <%= f.text_field :user %>
        </div>
        <div class="field">
          <%= f.label :controller_name %><br />
          <%= f.text_field :controller_name %>
        </div>
        <div class="field">
          <%= f.label :action_name %><br />
          <%= f.text_field :action_name %>
        </div>
        <div class="field">
          <%= f.label :line_number %><br />
          <%= f.text_field :line_number %>
        </div>
        <div class="field">
          <%= f.label :referrer_url %><br />
          <%= f.text_field :referrer_url %>
        </div>
        <div class="field">
          <%= f.label :original_path %><br />
          <%= f.text_field :original_path %>
        </div>
        <div class="field">
          <%= f.label :environment %><br />
          <%= f.text_field :environment %>
        </div>
        <div class="field">
          <%= f.label :error_time %><br />
          <%= f.date_select :error_time %>
        </div>
      </div>
    </div>
    <div class="block span6">
      <a href="#address-info" class="block-heading" data-toggle="collapse"><%=t(:error_description)%></a>
      <div id="address-info" class="block-body collapse in">
        <br />
        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <%= f.label :backtrace %><br />
          <%= f.text_area :backtrace %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%if can? :index, ErrorReport%>
      <%= link_to t(:back, :default => t("helpers.links.back")),
        error_reports_path, :class => 'btn'  %>
    <%end%>
  </div>
<% end %>
