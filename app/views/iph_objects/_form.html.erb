<%= form_for(@iph_object) do |f| %>
  <% if @iph_object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@iph_object.errors.count, "error") %> prohibited this iph_object from being saved:</h2>

      <ul>
        <% @iph_object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row-fluid">
    <div class="block">
      <a href="#general-info" class="block-heading" data-toggle="collapse"><%= t(:general_information) %></a>
      <div id="general-info" class="block-body collapse in">
        <br />
        <div class="field">
          <%= f.label :amount %><br />
          <%= f.number_field :amount %>
        </div>
        <div class="field">
          <%= f.label :object %><br />
          <%= f.text_field :object %>
        </div>
        <div class="field ">
          <%= f.label :description %><br />
          <%= f.text_area :description %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%if can? :index, IphObject %>
      <%= link_to t(:back, :default => t('helpers.links.back')), iph_objects_path, :class => 'btn' %>
    <%end%>
  </div>

<% end %>
