<%= form_for(@iph_person) do |f| %>
  <% if @iph_person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@iph_person.errors.count, "error") %> prohibited this iph_person from being saved:</h2>

      <ul>
        <% @iph_person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row-fluid">
    <div class="block">
      <a href="#general-info" class="block-heading" data-toggle="collapse"><%= t(:general_information) %></a>
      <div id="general-info" class="block-body collapse in">
        <br />
        <div class="field">
          <%= f.label :id %><br />
          <%= f.number_field :id %>
        </div>
        <div class="field">
          <%= f.label :ci %><br />
          <%= f.text_field :ci %>
        </div>
        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name %>
        </div>
        <div class="field">
          <%= f.label :last_name1 %><br />
          <%= f.text_field :last_name1 %>
        </div>
        <div class="field">
          <%= f.label :last_name2 %><br />
          <%= f.text_field :last_name2 %>
        </div>
        <div class="field">
          <%= f.label :alias %><br />
          <%= f.text_field :alias %>
        </div>
        <div class="field">
          <%= f.label :birth_date %><br />
          <%= f.date_select :birth_date %>
        </div>
        <div class="field">
          <%= f.label :originative %><br />
          <%= f.text_field :originative %>
        </div>
        <div class="field">
          <%= f.label :genre %><br />
          <%= f.text_field :genre %>
        </div>
        <div class="field">
          <%= f.label :record %><br />
          <%= f.check_box :record %>
        </div>
        <div class="field">
          <%= f.label :profession %><br />
          <%= f.text_field :profession %>
        </div>
        <div class="field">
          <%= f.label :observations %><br />
          <%= f.text_area :observations %>
        </div>
        <div class="field">
          <%= f.label :status_id %><br />
          <%= f.number_field :status_id %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%if can? :index, IphPerson %>
      <%= link_to t(:back, :default => t('helpers.links.back')), iph_people_path, :class => 'btn' %>
    <%end%>
  </div>

<% end %>
