<%content_for :breadcrumb do%>
  <ul class="breadcrumb">
    <li><%=link_to t(:home), root_path%><span class="divider">/</span></li>
    <%if can? :index, IphWeapon %>
      <li class="active"><%=link_to t(:index), iph_weapons_path %><span class="divider">/</span></li>
    <%end%>
    <%if can? :new, IphWeapon %>
      <li class="active"><%=link_to t(:new), new_iph_weapon_path%></li>
    <%end%>
  </ul>
<%end%>


<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th><%= t'.id' %></th>
        <th><%= t'.brand' %></th>
        <th><%= t'.model' %></th>
        <th><%= t'.serial_number' %></th>
        <th><%= t'.weapon' %></th>
        <th><%= t'.caliber' %></th>
        <th><%= t'.weapon_type' %></th>
        <th><%= t(:actions) %></th>
      </tr>
    </thead>
    <tbody>
      <% @iph_weapons.each do |iph_weapon| %>
        <tr>
          <td><%= iph_weapon.id %></td>
          <td><%= iph_weapon.brand %></td>
          <td><%= iph_weapon.model %></td>
          <td><%= iph_weapon.serial_number %></td>
          <td><%= iph_weapon.weapon %></td>
          <td><%= iph_weapon.caliber %></td>
          <td><%= iph_weapon.weapon_type_id %></td>
          <td>         
            <ul class="nav nav-pills">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to iph_weapon do %>
                      <i class="icon-eye-open"></i>&nbsp;&nbsp;<%=t(:show, :default => t("helpers.links.show"))%>
                    </li>
                  <%end%>
                  <li>
                    <%= link_to edit_iph_weapon_path(iph_weapon) do %>
                      <i class="icon-pencil"></i>&nbsp;&nbsp;<%=t(:edit, :default => t("helpers.links.edit"))%>
                    <%end%>
                  </li>
                  <li>
                    <%= link_to  iph_weapon, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                      <i class="icon-trash"></i>&nbsp;&nbsp;<%=t(:destroy, :default => t("helpers.links.destroy"))%>
                    <%end%>
                  </li>
                </ul>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />
<%=link_to t(:new)+" iph_weapon", new_iph_weapon_path, :class => "btn btn-primary"%>

