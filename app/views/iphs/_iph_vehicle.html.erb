<div class="row-fluid">
  <div class="block ">
    <a href="#vehicle-info" class="block-heading" data-toggle="collapse">Registro Vehiculos</a>
    <div id="vehicle-info" class="block-body-interior collapse in interior">
      <br />
      <div class="field">
        <%= f.label "Marca" %><br />
        <%= f.text_field :brand %>
      </div>
      <div class="field">
        <%= f.label "Linea" %><br />
        <%= f.text_field :line %>
      </div>
      <div class="field">
        <%= f.label "Modelo" %><br />
        <%= f.number_field :model %>
      </div>
      <div class="field">
        <%= f.label "Placas" %><br />
        <%= f.text_field :plate %>
      </div>
      <div class="field">
        <%= f.label "Numero de serie" %><br />
        <%= f.text_field :serial_number %>
      </div>
      <div class="field">
        <%= f.label "Color" %><br />
        <%= f.text_field :color %>
      </div>
      <div class="field">
        <%= f.label "Robado " %> 
        <%= f.check_box :stolen %>
      </div>
      <div class="field">
        <%= f.label "Detalles" %><br />
        <%= f.text_area :details %>
      </div>
    </div>
  </div>
</div>

<div class="form-actions">
  <%=f.link_to_remove " Vehiculo",:class => 'btn btn-danger icon-less'%>
</div>