<%content_for :breadcrumb do%>
  <ul class="breadcrumb">
    <li><%=link_to t(:home), root_path%><span class="divider">/</span></li>
    <%if can? :index, Iph %>
      <li class="active"><%=link_to t(:index), iphs_path %><span class="divider">/</span></li>
    <%end%>
    <%if can? :new, Iph %>
      <li class="active"><%=link_to t(:new), new_iph_path%></li>
    <%end%>
  </ul>
<%end%>


<div class="show-details">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t'.iph_date' %></th>
        <th><%= t'.folio' %></th>
        <th><%= t'.office_number' %></th>
        <th>Corporaci√≥n</th>
        <th><%= t'.description' %></th>
        <th><%= t'.observations' %></th>
        <th><%= t(:actions) %></th>
      </tr>
    </thead>
    <tbody>
      <% @iphs.each do |iph| %>
        <tr>
          <td><%= I18n.l  iph.iph_date, :format => "%d de %B del %Y a las %H:%M hrs" %></td>
          <td><%= iph.folio %></td>
          <td><%= iph.office_number %></td>
          <td>
            <% if iph.vialidad %>
              Vialidad
            <% elsif iph.investigadora %>
              Investigadora
            <% elsif iph.peup %>
              Policia Estatal Unica Preventiva      
            <%end%>
          </td>
          <td> 
            <% if !iph.description.nil? %>
              <%= iph.description.truncate(25, :omission => "...") %>
              <%= link_to '(continua)',iph %> 
            <%end%>
          </td>
          <td>
            <%if !iph.observations.nil?%>
              <%= iph.observations.truncate(30, :omission => "...(continua)" ) %>
            <%end%>
          </td>
          <td>         
            <ul class="nav nav-pills">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to iph do %>
                      <i class="icon-eye-open"></i>&nbsp;&nbsp;<%=t(:show, :default => t("helpers.links.show"))%>
                    </li>
                  <%end%>
                  <li>
                    <%= link_to edit_iph_path(iph) do %>
                      <i class="icon-pencil"></i>&nbsp;&nbsp;<%=t(:edit, :default => t("helpers.links.edit"))%>
                    <%end%>
                  </li>
                  <li>
                    <%= link_to  iph, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                      <i class="icon-trash"></i>&nbsp;&nbsp;<%=t(:destroy, :default => t("helpers.links.destroy"))%>
                    <%end%>
                  </li>
                </ul>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />
<%=link_to t(:new)+" Informe Policial Homologado", new_iph_path, :class => "btn btn-primary"%>

