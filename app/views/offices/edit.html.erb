
<%= render "form" %>




<script>
  function submitformregistrar()
  {
    $('#estatus').val(10004);
    if ($('#office_kind_r').is(':checked')) {
      $("#estatus").val(<%=Status.find_by_description_and_status_type("ENVIADO", "Colaboracion").id%>);
