      <%= link_to 'Editar', edit_office_path(@office), :class => 'btn btn-primary' %> |
    <%end%>
    <%if can? :assign, Office%>
      <%if @office.status_id != 10004%>
        <%= link_to "Reasignar", assign_path(@office), :class => "btn btn-primary" %> |
      <%else%>
        <%= link_to "Asignar", assign_path(@office), :class => "btn btn-primary" %> |
      <%end%>
    <%end%>
    <%if @office.status_id == 10003%>
      <%if can? :approve, Office%>
        <%= link_to 'Aprobar', approve_path(@office), :class => 'btn btn-success' %> |
      <%end%>
