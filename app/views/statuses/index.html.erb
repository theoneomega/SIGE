<h1>Listing statuses</h1>
<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Descripción</th>
        <th>Tipo</th>
        <th>Detalle</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.id %></td>
        <td><%= status.description %></td>
        <td><%= status.detail %></td>
        <td><%= status.status_type %></td>
        <td>
          <ul class="nav nav-pills">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Mostrar', status %></li>
                <li><%= link_to 'Editar', edit_status_path(status) %></li>
                <li><%= link_to 'Eliminar', status, method: :delete, data: { confirm: '¿Estas seguro?' } %></li>
              </ul>
            </li>
          </ul>
        </td>

      </tr>
    <% end %>
  </table>
</div>
<br />
<%= link_to 'Registrar nuevo', new_status_path, :class => "btn btn-primary" %>
